  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Acr.UserDialogs" Version="7.1.0.442" />
    <PackageReference Include="AutoMapper" Version="9.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="RestSharp" Version="106.10.1" />
    <PackageReference Include="RestSharp.Serializers.NewtonsoftJson" Version="106.10.1" />
    <PackageReference Include="StudentSurveySystem.Core" Version="1.0.6" />
    <PackageReference Include="Syncfusion.Licensing" Version="18.1.0.44" />
    <PackageReference Include="Syncfusion.Xamarin.Core" Version="18.1.0.44" />
    <PackageReference Include="Syncfusion.Xamarin.SfComboBox" Version="18.1.0.44" />
    <PackageReference Include="Syncfusion.Xamarin.SfListView" Version="18.1.0.44" />
    <PackageReference Include="Xamarin.Auth" Version="1.7.0" />
    <PackageReference Include="Xamarin.Forms" Version="4.5.0.396" />
    <PackageReference Include="Xamarin.Essentials" Version="1.5.2" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\FillSurveys\FillSurveyList.xaml.cs">
      <DependentUpon>FillSurveyList.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\FillSurveys\SurveyForm.xaml.cs">
      <DependentUpon>SurveyForm.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\SurveyResponses\MySurveyResponsesList.xaml.cs">
      <DependentUpon>MySurveyResponsesList.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\SurveyResponses\SurveyResponseDetails.xaml.cs">
      <DependentUpon>SurveyResponseDetails.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Views\Menu\AboutPage.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\MySurveys\MySurveysList.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\SurveyResponses\AllResponses.xaml">
      <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Views\Auth\AuthPage.xaml">
